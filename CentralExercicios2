fimprocedimento

//Exercicio1 - Tabuada
procedimento Exercicio1()
var
   cont, n, r, t: Inteiro
   resp, resp2: Caracter
inicio
      //Topo - Tabuada
      limpatela
      escreval("=====================")
      escreval("Exercicio 1 - Tabuada")
      escreval("=====================")
      escreval()
      
      //Processo - Tabuada
      cont <- 1
      escreva("* Digite o tamanho da tabuada: ")
      leia(t)
      escreva("* Digite o número da tabuada: ")
      leia(n)
      escreval("---------------------------")
      escreval()
      enquanto (cont <= t) faca
         r <- cont * n
         escreval(cont, " x", n, " =", r)
         cont <- cont + 1
      fimenquanto
      
      //Processo - Menu Auxiliar
      MenuNavegar()
      escreva("* Decida sua escolha: ")
      leia(resp2)
      escolha resp2
      caso "1"
           Exercicio1()
      caso "2"
           MenuPrincipal()
      caso "x"
           Finalizar()
      outrocaso
               escreval()
               escreval("-------------------")
               escreval("* Opção inválida.")
      fimescolha
fimprocedimento

