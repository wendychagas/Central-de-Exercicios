//Exercicio3 - Calculadora
procedimento Exercicio3
var
   v1, v2, r: Real
   resp, resp2, op: Caracter
inicio
      //Topo - Calculadora
      limpatela
      escreval("=========================")
      escreval("Exercicio 3 - Calculadora")
      escreval("=========================")
      escreval()
      
      //Processo - Calculadora
      escreva("* Digite o 1º valor: ")
      leia(v1)
      escreva("* Digite a operação: ")
      leia(op)
      escreva("* Digite o 2º valor: ")
      leia(v2)
      escreval()
      escreval("Resultado: ")
      escreval()
      escolha op
      caso "+"
           r <- v1 + v2
           escreval(v1, " +", v2, " =", r)
      caso "-"
           r <- v1 - v2
           escreval(v1, " -", v2, " =", r)
      caso "*"
           r <- v1 * v2
           escreval(v1, " *", v2, " =", r)
      caso "/"
           r <- v1 / v2
           escreval(v1, " /", v2, " =", r)
      outrocaso
               escreval("Operação inválida.')
      fimescolha
      
      //Processo - Menu Auxiliar 2
      MenuNavegar()
      escreva("* Decida sua escolha: ")
      leia(resp2)
      escolha resp2
      caso "1"
           Exercicio3()
      caso "2"
           MenuPrincipal()
      caso "x"
           Finalizar()
      outrocaso
               escreval("-------------------")
               escreval("* Opção inválida.")
      fimescolha
fimprocedimento


